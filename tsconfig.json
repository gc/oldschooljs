{
	"extends": "eslint-config-bamboo",
	"compilerOptions": {
		"strictNullChecks": false,
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"removeComments": false,
		"outDir": "./dist",
		"types": ["node"],
		"target": "ES6",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["./src/**/*"]
}
